<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".telaComMapa">
   <!-- <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/header"/>
    </RelativeLayout>
    -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="4110dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:background="#F53D3D"
        android:minHeight="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white">


        <ImageButton
            android:id="@+id/menuToolBar"
            android:layout_width="45dp"
            android:layout_height="38dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#00FFFFFF"
            android:minHeight="40dp"
            android:src="@drawable/menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="70dp"
            android:text="A DiligÃªncia"
            android:textAlignment="gravity"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:layout_constraintEnd_toStartOf="@+id/notifyApp"
            app:layout_constraintStart_toEndOf="@+id/menuToolBar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/notifyBell"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:backgroundTint="#00FFFFFF"
            android:minHeight="40dp"
            android:src="@drawable/bell"
            app:layout_constraintEnd_toStartOf="@id/button2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/buttonnotify"
            android:text="1"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="366dp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#B22222"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        tools:layout_editor_absoluteX="-16dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/search"
            android:background="#F53D3D"
            android:ems="10"
            android:hint="Pesquisar"
            android:inputType="text"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/configs" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>